@page "/admin/orders"
@attribute [Authorize(Roles = BlazorShared.Authorization.Constants.Roles.ADMINISTRATORS)]
@inherits BlazorAdmin.Helpers.BlazorComponent
@namespace BlazorAdmin.Pages.OrderPage

<PageTitle>eShopOnWeb Admin: Manage Orders</PageTitle>

<h1>Manage Orders</h1>

@if (orderList == null)
{
    <Spinner></Spinner>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Order Id</th>
                <th>Buyer</th>
                <th>Order date</th>
                <th>Total</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody class="cursor-pointer">
            @foreach (var item in orderList)
            {
                <tr @onclick="@(() => DetailsClick(item.Id))">
                    <td>@item.Id</td>
                    <td>@item.BuyerId</td>
                    <td>@item.OrderDate</td>
                    <td>$ @item.Total</td>
                    <td>
                        @if (item.Status == 1)
                        {
                            <span class="text-success">
                                Approved
                            </span>
                        }
                        else
                        {
                            <span class="text-danger">
                                Pending
                            </span>
                        }
                    </td>
                    <td>
                        <button @onclick="@(() => DetailsClick(item.Id))" @onclick:stopPropagation="true" class="btn btn-primary">
                            Detail
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <Details OnSaveClick="ReloadOrders" @ref="DetailsComponent"></Details>
}
